  <body>
    <h1>This is where you view your profile - including editing details.</h1>

   <form action="/profile/:id" method="POST" class="pure-form">
    <fieldset>
            <input type="text" class="pure-input-rounded" name="email" placeholder="Email" />
            <input class="pure-input-rounded" type="password" name="password" placeholder ="Password" />

        <form method="POST" action="/profile/:id">
          <button class="pure-button" >
            <i class="far fa-edit"></i>UPDATE PROFILE
          </button>
        </form>

          <form method="POST" action="/profile/:id/delete">
            <button class="pure-button">
              <i class="fas fa-minus-circle"></i>DELETE ACCOUNT
            </button>
        </form>

    </fieldset>
  </form>

  </body>
</html>